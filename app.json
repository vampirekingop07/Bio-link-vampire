{
  "name": "Bio Mute Bot",
  "description": "Telegram bot that mutes users based on bio content, warns on links, and supports broadcasts.",
  "repository": "https://github.com/riteshxcoder/Biolink",
  "keywords": ["telegram", "pyrogram", "bot", "bio", "mute", "heroku"],
  "env": {
    "API_ID": {
      "description": "Your Telegram API ID",
      "required": true
    },
    "API_HASH": {
      "description": "Your Telegram API HASH",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Bot token from @BotFather",
      "required": true
    },
    "OWNER_ID": {
      "description": "Your Telegram user ID",
      "required": true
    },
    "MONGO_URI": {
      "description": "MongoDB connection URI",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "worker": {
      "quantity": 1
    }
  },
  "stack": "heroku-22"
}
